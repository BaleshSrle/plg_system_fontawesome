<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_FONTAWESOME</name>
    <author>Yireo</author>
    <creationDate>December 2015</creationDate>
    <copyright>Copyright (C) 2015 Yireo.com. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <authorEmail>info@yireo.com</authorEmail>
    <authorUrl>www.yireo.com</authorUrl>
    <version>0.0.3</version>
    <description>PLG_SYSTEM_FONTAWESOME_DESC</description>

    <files>
        <filename plugin="fontawesome">fontawesome.php</filename>
        <filename>index.html</filename>
    </files>

    <languages>
        <language tag="en-GB">en-GB.plg_system_fontawesome.ini</language>
        <language tag="en-GB">en-GB.plg_system_fontawesome.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="aliases" type="textarea" rows="10" label="PLG_SYSTEM_FONTAWESOME_FIELD_ALIASES" description="PLG_SYSTEM_FONTAWESOME_FIELD_ALIASES_DESC" />
            </fieldset>
            <fieldset name="advanced">
                <field name="prefix" type="text" default="fa" label="PLG_SYSTEM_FONTAWESOME_FIELD_PREFIX" description="PLG_SYSTEM_FONTAWESOME_FIELD_PREFIX_DESC" />
                <field name="path" type="text" default="" label="PLG_SYSTEM_FONTAWESOME_FIELD_PATH" description="PLG_SYSTEM_FONTAWESOME_FIELD_PATH_DESC" />
                <field name="loadcss" type="radio" class="btn-group btn-group-yesno" default="1" label="PLG_SYSTEM_FONTAWESOME_FIELD_LOADCSS" description="PLG_SYSTEM_FONTAWESOME_FIELD_LOADCSS_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="element" type="text" default="i" label="PLG_SYSTEM_FONTAWESOME_FIELD_ELEMENT" description="PLG_SYSTEM_FONTAWESOME_FIELD_ELEMENT_DESC" />
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="plg_system_fontawesome">https://www.yireo.com/updates/plg_system_fontawesome.xml</server>
    </updateservers>
</extension>
